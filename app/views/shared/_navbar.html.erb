<div class="navbar-club_xp">
  <!-- Logo -->

  <a href="javascript:history.back()"><i class="fas fa-chevron-left"></i></a>


  <!-- Right Navigation -->
  <div class="navbar-club_xp-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-club_xp-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-club_xp-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-club_xp-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-club_xp-item navbar-club_xp-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <% if controller_name == "clubs" && action_name == "show" %>
   <!--  <i class="far fa-heart"></i> -->

    <% if @favorite_club.present? %>
        <%= simple_form_for([@club, @favorite_club]) do |f| %>
        <%= f.submit "Favs", :type => :image, :src => image_path("favorite-heart-button.svg"), :class =>"show-flaticon-like" %>
      <% end %>
    <% else %>
      <%= simple_form_for ([@club, @favorite]) do |f| %>
      <%= f.submit "Favs", :type => :image, :src => image_path("dislike.svg"), :class =>"show-flaticon" %>
     <% end %>
    <% end %>
  <% elsif controller_name == "clubs" && action_name == "index"%>
    <div class="navbar-club_xp-item hidden-md hidden-lg">
      <div class="dropdown">
        <i data-toggle="dropdown"class="text-white dwn-btn"><i id="drop-dwn-btn" class="fas fa-caret-down"></i></i></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-club_xp-dropdown-menu" style="background-color: #04142C">
          <li class="text-white" style="padding-left: 10px">SORT BY:</li>
          <li><a id="sort-by-distance" href="#">Distance</a></li>
          <li><a href="#">Ratings</a></li>
          <li><a href="#">Hotness</a></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>

