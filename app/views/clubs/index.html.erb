<div class="my-container">

    <div class="flex-container">

      <% @clubs.each do |club| %>

        <div class="club-card"
          style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)),

               url('<%= cl_image_path club.photo, crop: :fill %>')" >

          <%= link_to club_path(club.id) do %>

          <h2><%= club.name %></h2>
          <% end %>
        </div>

      <% end %>
    </div>
</div>
