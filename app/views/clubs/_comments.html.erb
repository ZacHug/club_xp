<% @club.comments.each do |comment| %>
 <div class="comment-container">
    <div class="flex-container-img">
    <%= cl_image_tag comment.user.photo ,  height: 50, width: 50, crop: :thumb ,class: "img-circle" %>
    </div>
     <div class="flex-container-content">
      <h5><strong><%= comment.user.name_string %></strong></h5>
      <p><%= comment.content %></p>

    </div>
    <!-- put this this_ago right under at the proper location -->
    <%= time_ago_in_words(comment.created_at), class: 'text-gold' %>

  </div>
<% end %>

  <%= simple_form_for [@club, @comment], defaults: { input_html: { class: 'flex-form'} } do |f| %>
    <%= f.input :content %>
    <%= f.submit "post", class: "btn btn-primary" %>
  <% end %>
