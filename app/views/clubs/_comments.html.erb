<% @club.comments.each do |comment| %>
<div class="comment-container">

  <div class="flex-container-img">
    <%= cl_image_tag comment.user.photo ,  height: 60, width: 60, crop: :thumb ,class: "img-circle" %>

  <div class="flex-container-content">

    <h5><strong><%= comment.user.name_string %></strong></h5>
    <p><%= comment.content %></p>
  </div>
  </div>

  <div class="comment-time-container">
    <span class="text-gold"> <%= time_ago_in_words(comment.created_at) %> ago </span>
  </div>
</div>

<% end %>

<%= simple_form_for [@club, @comment], defaults: { input_html: { class: 'flex-form'} } do |f| %>
<%= f.input :content %>
<%= f.submit "post", class: "btn btn-primary" %>
<% end %>
