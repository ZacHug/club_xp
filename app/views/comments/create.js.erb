function refreshForm(innerHTML) {
  const newCommentForm = document.getElementById('new_comment');
  newCommentForm.innerHTML = innerHTML;
}

function addReview(commentHTML) {
  const comments = document.querySelector('.all-container');
  comments.insertAdjacentHTML('afterbegin', commentHTML);
}

<% if @comment.errors.any? %>
  refreshForm('<%= j render "clubs/form", club: @club, comment: @comment %>');
<% else %>
  addReview('<%= j render "comments/show", comment: @comment %>');
  refreshForm('<%= j render "clubs/form", club: @club, comment: Comment.new %>');
<% end %>
